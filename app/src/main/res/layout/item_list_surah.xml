<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_card_surah"
    android:padding="8dp"
    app:cardCornerRadius="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_surah"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bg_row" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_noSurah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="8dp"
        android:text="120"
        app:layout_constraintBottom_toBottomOf="@id/ic_surah"
        app:layout_constraintEnd_toEndOf="@id/ic_surah"
        app:layout_constraintStart_toStartOf="@id/ic_surah"
        app:layout_constraintTop_toTopOf="@id/ic_surah" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_nameArabicSurah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al Fatiha"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Al Fateha"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/ic_surah"
        app:layout_constraintTop_toTopOf="@id/ic_surah" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_daerah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Madinah"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_jumlahAyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="7 Ayat"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_daerah"
        app:layout_constraintTop_toTopOf="@id/tv_daerah" />
</androidx.constraintlayout.widget.ConstraintLayout>

